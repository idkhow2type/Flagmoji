{
    "name": "Flagmoji",
    "description": "Replace regional indicators with images of flags",
    "version": "1.1.1",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "scripting"
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "settings.js"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/index.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "./assets/icon.png"
    },
    "icons": {
        "200": "assets/icon.png"
    }
}